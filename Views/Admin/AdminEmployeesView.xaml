<UserControl x:Class="CAKA.PerformanceApp.Views.Admin.AdminEmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="700">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,0,24">
            <!-- Yeni kullanıcı / Düzenleme kartı -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Kullanıcı düzenleniyor" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,16"
                               Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="Yeni kullanıcı ekle" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,16"
                               Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Kullanıcı adı" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}" Padding="10,8"
                                     IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="8,0">
                            <TextBlock Text="Şifre" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"
                                       Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
                            <TextBlock Text="Yeni şifre (boş bırakılırsa değişmez)" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"
                                       Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <PasswordBox x:Name="NewPasswordBox" Padding="10,8" PasswordChanged="NewPasswordBox_PasswordChanged"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="8,0">
                            <TextBlock Text="Ad Soyad" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewDisplayName, UpdateSourceTrigger=PropertyChanged}" Padding="10,8"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Margin="8,0,12,0">
                            <TextBlock Text="Departman" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewDepartment, UpdateSourceTrigger=PropertyChanged}" Padding="10,8"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Content="Ekle" Command="{Binding AddUserCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="20,10" Margin="0,0,8,0"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
                            <Button Content="Kaydet" Command="{Binding SaveEditCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="20,10" Margin="0,0,8,0"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Button Content="İptal" Command="{Binding CancelEditCommand}"
                                    Padding="16,10" Background="{StaticResource BorderBrush}" Foreground="{StaticResource TextPrimaryBrush}"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AccentBrush}" Margin="0,12,0,0"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Liste ve aksiyonlar -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Kayıtlı kullanıcılar" Style="{StaticResource TitleTextStyle}" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Yenile" Command="{Binding RefreshCommand}" Margin="0,0,8,0"
                                    Padding="12,8" Background="{StaticResource BorderBrush}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Button Content="Güncelle" Command="{Binding StartEditCommand}" Margin="0,0,8,0"
                                    Padding="12,8" Background="{StaticResource AccentBrush}" Foreground="White"/>
                            <Button Content="Seçileni sil" Command="{Binding DeleteUserCommand}" Margin="0,0,8,0"
                                    Padding="12,8" Background="#E57373" Foreground="White"/>
                            <Button Content="Askıya al / Aktifleştir" Command="{Binding ToggleSuspendCommand}"
                                    Padding="12,8" Background="#5C6BC0" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    <DataGrid ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                              CanUserDeleteRows="False" SelectionMode="Single" SelectionUnit="FullRow"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              RowHeight="36" Margin="0,0,0,0"
                              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kullanıcı adı" Binding="{Binding UserName}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Ad Soyad" Binding="{Binding DisplayName}" Width="*" MinWidth="120"/>
                            <DataGridTextColumn Header="Departman" Binding="{Binding Department}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Durum" Binding="{Binding IsSuspended, Converter={StaticResource BoolToStatusConverter}}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
