<Window x:Class="CAKA.PerformanceApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Çalışan Performans Takip Sistemi - Giriş"
        Height="520" Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Border Style="{StaticResource CardStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"
                MaxWidth="360" Margin="20">
            <StackPanel>
                <Border Height="64" Margin="0,0,0,24" CornerRadius="8" Background="White">
                    <Grid>
                        <TextBlock x:Name="LogoFallbackText" Text="CAKA" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Image x:Name="LogoImage" Stretch="Uniform" MaxHeight="48" VerticalAlignment="Center" HorizontalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                <TextBlock Text="Performans Takip Sistemi" Style="{StaticResource SubtitleTextStyle}"
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>

                <TextBlock Text="Kullanıcı adı" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="UserNameCombo" Grid.Column="0" ItemsSource="{Binding SavedUserNames}"
                              Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                              IsEditable="True" Padding="12,10" FontSize="14" VerticalAlignment="Center"
                              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                              SelectionChanged="UserNameCombo_SelectionChanged"/>
                    <Button Grid.Column="1" Content="Listeden sil" Command="{Binding RemoveSavedUserCommand}"
                            Margin="8,0,0,0" Padding="8,6" FontSize="12" VerticalAlignment="Center"
                            Style="{StaticResource SecondaryButtonStyle}" ToolTip="Seçili kullanıcı adını kayıtlı listeden kaldırır"/>
                </Grid>
                <TextBlock Text="Kayıtlı kullanıcılardan silmek için listeden seçip &#x22;Listeden sil&#x22;e tıklayın." 
                           FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

                <TextBlock Text="Şifre" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,8"
                             Padding="12,10" FontSize="14"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" Margin="0,0,0,12"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                           TextWrapping="Wrap"/>

                <Button Content="Giriş Yap" Command="{Binding LoginCommand}"
                        IsDefault="True"
                        Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"
                        Margin="0,8,0,0" Height="44"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
