<UserControl x:Class="CAKA.PerformanceApp.Views.Personel.PersonelAddWorkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="520">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Style="{StaticResource CardStyle}" MaxWidth="560">
            <StackPanel>
                <TextBlock Text="İş Ekle" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,20"/>

                <TextBlock Text="Tarih (tüm satırlar için geçerli)" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,4"/>
                <TextBlock Text="{Binding WeekRangeText, StringFormat='Sadece bu hafta: {0}'}" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}"/>
                <DatePicker SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged}"
                            DisplayDateStart="{Binding WeekStart, Mode=OneWay}" DisplayDateEnd="{Binding WeekEnd, Mode=OneWay}"
                            Margin="0,0,0,20" Padding="10,8" FontSize="14"/>

                <Grid Margin="0,0,0,12">
                    <TextBlock Text="İşler (açıklama ve saat; birden fazla satır ekleyebilirsiniz)" Style="{StaticResource SubtitleTextStyle}" VerticalAlignment="Center"/>
                    <Button Content="+ Satır ekle" Command="{Binding AddRowCommand}" HorizontalAlignment="Right"
                            Padding="14,8" Background="{StaticResource AccentBrush}" Foreground="White"/>
                </Grid>
                <DataGrid ItemsSource="{Binding Entries}" AutoGenerateColumns="False" IsReadOnly="False"
                          CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column"
                          RowHeight="40" Margin="0,0,0,16"
                          BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="İş açıklaması" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="*" MinWidth="200"/>
                        <DataGridTemplateColumn Header="Saat" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Hours, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalToStringConverter}, Mode=TwoWay}"
                                             Padding="6,4" BorderThickness="0" Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Command="{Binding DataContext.RemoveRowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,4" FontSize="12" Background="#E57373" Foreground="White" BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"
                           Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="Tümünü kaydet" Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left"
                        Padding="32,12" Height="44"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
